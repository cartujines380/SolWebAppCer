@{
    ViewBag.Title = "Rio Store";
    Layout = "~/Views/Shared/_LayoutSecundarioG.cshtml";
}



<div class="wrap">

    <section>
        <div class="row">
            <br />
            <div class="col-md-12 col-xs-12 col-sd-12" style="padding:0 0 0 0;margin:0 22px;">
                <div id="main_slider" style=" width:100%">
                    <div class="camera_wrap" id="camera_wrap_1">

                        <div data-src="../Content/Portal/images/slider/slide10.jpg">
                            <div class="camera_caption fadeIn">
                                <div class="slide_descr"></div>
                            </div>
                        </div>
                        <div data-src="../Content/Portal/images/slider/slide11.jpg">
                            <div class="camera_caption2 fadeIn">
                                <div class="slide_descr"></div>
                            </div>
                        </div>

                    </div><!-- #camera_wrap_1 -->
                    <div class="clear"></div>


                </div>

            </div>
        </div>
        <div class="row">
            <div class="col-md-4 col-xs-4 col-sd-4">
                <img src="~/Content/Portal/images/LogoRioStore.gif" class="img-responsive" alt="Image">
            </div>
            <div class="col-md-8 col-xs-8 col-sd-8">
                <p align="justify" style="font-size:16px;color:#808080;font-family:Arial">Rio Store es el conjunto de tiendas por departamento más grande del país y posee 33 locales a nivel nacional, En sus secciones de ropa, calzado, perfumería, cosméticos y hogar, se encuentran productos nacionales e importados para satisfacer todos los gustos.
                <br />
Además, cuenta con un amplio departamento de cosméticos que ofrece productos de marcas con renombre internacional como Palladio, Maybelline, Neutrogena, Nivea, L'Oréal, y muchas marcas más.
</p>

            </div>
        </div>


    </section>
    <div class="row" style="margin-left:800px;">
        <img src="~/Images/ICONOS-RRSS-SinPag.png" class="img-responsive" usemap="#Map" />
    </div>
    <br />
    <div class="row" style="margin:0 -28px;">
        <div class="col-md-12" border="0">
            <img src="~/Images/--negocios_r8_c1 - copia.png" style="width:100%;" height="65" border="0" id="negocios_r8_c1" alt="" />
        </div>
    </div>
    <div class="row" style="margin:0 -18px;">
        <div class="col-md-12" border="0" style="text-align:right">
            <p style="font-size:10px;color:#808080">Todos los derechos reservados Corporación El Rosado S.A @DateTime.Now.Year&copy;    </p>
        </div>
    </div>

</div>
<map name="Map" id="Map">
    <area shape="rect" coords="6,9,40,40" href="https://www.facebook.com/RioStoreEc/" target="_blank"/>
    <area shape="rect" coords="50,9,85,40" href="https://www.instagram.com/riostore.ec/" target="_blank"/>
    <area shape="rect" coords="95,9,130,40" href="https://twitter.com/RioStoreEC?lang=es" target="_blank"/>
</map>

@section scripts{

    <script type="text/javascript">
        $(document).ready(function () {
            //Slider
            $('#camera_wrap_1').camera({
                fx: 'simpleFade'
            });

        });

    </script>
    <script>
        $(function () {
            $('a[href*=#]:not([href=#])').click(function () {
                if (location.pathname.replace(/^\//, '') == this.pathname.replace(/^\//, '') && location.hostname == this.hostname) {
                    var target = $(this.hash);
                    target = target.length ? target : $('[name=' + this.hash.slice(1) + ']');
                    if (target.length) {
                        $('html,body').animate({
                            scrollTop: target.offset().top
                        }, 1000);
                        return false;
                    }
                }
            });
        });
    </script>
}