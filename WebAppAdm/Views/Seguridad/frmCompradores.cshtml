                            </div>
                            <div class="modal-footer">
                                <div style="text-align:center;">
                                    @*<button type="button" class="btn btn-success btn-sm " data-dismiss="modal" ng-click="okGrabar()" id="btnconfigrabar">
                                        <i class="ace-icon fa fa-check"></i>
                                        Aceptar
                                    </button>*@
                                    <button type="button" class="btn btn-success btn-sm " id="consultagrid" data-rel="tooltip" data-placement="bottom" title="Consultar" 
