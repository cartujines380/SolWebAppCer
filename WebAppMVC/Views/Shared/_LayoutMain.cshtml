    <script src="../Scripts/Particulares/highlight.min.js"></script>
    <script src="../Scripts/Particulares/angular-highlightjs.js"></script>
    <script src="../Scripts/General/angular-busy.js"></script>

    <script src="../Scripts/Particulares/angularjs-dropdown-multiselect.js"></script>
    <script src="../Scripts/Seguridad/SeguridadService.js"></script>

    <script src="../Scripts/Menu/toastr.js"></script>
    <script src="../Scripts/Menu/config.exceptionHandler.js"></script>
    <script src="../Scripts/Menu/config.js"></script>
    <script src="../Scripts/Menu/config.route.js"></script>
    <script src="../Scripts/Menu/shell.js"></script>
    <script src="../Scripts/Menu/common.js"></script>
    <script src="../Scripts/Menu/logger.js"></script>

    <script src="../assets/js/moment.min.js"></script>
    <script src="../assets/js/calendar.js"></script>
    <script src="../assets/js/fullcalendar.min.js"></script>
    <script src="../assets/js/gcal.js"></script>
    <script src="../Scripts/highcharts/highstock.js"></script>
    <script src="../Scripts/angular-highcharts.js"></script>
    <script src="../Scripts/highcharts/highcharts-ng.js"></script>

    @RenderSection("scripts", required: false)
</body>
</html>
