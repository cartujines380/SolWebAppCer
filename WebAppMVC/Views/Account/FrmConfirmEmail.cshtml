@{
    Layout = "~/Views/Shared/_LayoutSol.cshtml";

}

<div class="login-layout" style="max-width:100% !important" data-ng-controller="indexController">
    @*@Html.AntiForgeryToken()*@

    <br />
    <br />
    <br />
    <br />
    <br />

    <div class="login-container" data-ng-controller="loginControllerConfirmar">

        @*<div class="position-relative">*@
        <div class="row">
            <br />
            <br />
            <br />


            <div id="confirmemail-box" class="reset-box visible  visible widget-box no-border" style="color:#666666;  font-family:Lato-Regular, Arial, Helvetica, sans-serif; background:#FDFAEE; border-top-left-radius:14px; display:table-cell; margin:10px 0 20px 0; border:1px solid #F5F5F5; border-radius:16px;-webkit-box-shadow: rgba(0, 0, 0, 0.2) 12px 12px 30px;width:420px;">
                <div class="widget-body">
                    <div class="widget-main">
                        <h4 class="header bigger" style="color: #006865">
                            <i class="ace-icon fa fa-key"></i>
                            Confirmación de Correo Electrónico
                        </h4>

                        <div class="space-6"></div>
                        <p>
                            Verifique visualmente y confirme
                        </p>

                        <form name="confirmEmailForm" ng-submit="EmailConfirm()">
                            <fieldset>

                                <label class="block clearfix">
                                    <span class="block input-icon input-icon-right">
                                        <input type="text" style="height: 100%" class="form-control" placeholder="RUC" maxlength="13" only-digits disabled data-ng-model="puserc.ruc" ng-required="true" />
                                        <i class="ace-icon fa fa-info"></i>
                                    </span>
                                </label>


                                <label class="block clearfix">
                                    <span class="block input-icon input-icon-right">
                                        <input type="email" style="height: 100%" class="form-control" placeholder="Correo" data-ng-model="puserc.email" disabled ng-required="true" />
                                        <i class="ace-icon fa fa-envelope"></i>
                                    </span>
                                </label>


                                <div class="clearfix">
                                    <button id="btnConsulta" type="submit"  class="width-35 pull-right btn btn-sm btn-danger" ng-class="{'btn-primary':confirmEmailForm.$valid}" ng-hide="true" style=" width:120px ;background-color:#006865!important;border-color:#006865!important;">
                                        <i class="ace-icon fa fa-lightbulb-o"></i>
                                        <span class="bigger-80">Confirmar</span>
                                    </button>

                                </div>
                            </fieldset>
                        </form>
                    </div><!-- /.widget-main -->

                </div><!-- /.widget-body -->

            </div><!-- /.forgot-box -->
            @Html.Partial("_mensajeRedirect")
            <div class="modal fade" data-backdrop="static" data-keyboard="false" id="idMensajeInformativon" tabindex="-1" role="dialog" aria-hidden="true" style="z-index:98;height:100%; width:100%;">
                <div class="modal-dialog" style="height:80%;  top:20%;">
                    <div class="modal-content">
                        <div class="modal-header" style="text-align:center;">
                            <div @*class="widget-box"*@>
                                <div class="widget-header" style="color: #ffffff; background: #006865 !important; border-color: #006865 !important ">
                                    <div class="col-md-1">
                                        <button style="background: #006865 !important; border-color: #006865 !important " class="btn   btn-danger btn-xs">
                                            <i class="ace-icon fa fa-check-circle bigger-200"></i>
                                        </button>
                                    </div>
                                    <div class="col-md-10">
                                        <h4 class="white text-primary bigger-125">
                                            Mensaje Informativo
                                        </h4>
                                    </div>
                                    <div class="col-md-1">

                                    </div>

                                </div>
                            </div>
                        </div>
                        <div class="modal-body" style="  max-height: 70%; overflow-y: auto;">
                            <div class="panel-body">
                                <br />
                                <center>
                                    <label>
                                        <span class="lbl"><b>{{MenjError}}</b></span>
                                    </label>
                                </center>
                                <br />
                            </div>

                        </div>
                        <div class="modal-footer">
                            <div style="text-align:center;">
                                <button type="button" class="btn btn-primary btn-sm  " data-dismiss="modal" id="btnConsulta" ng-click="Redireccion()">
                                    <i class="ace-icon fa fa-check"></i>
                                    Aceptar
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>


    </div>
</div><!-- /.col -->
