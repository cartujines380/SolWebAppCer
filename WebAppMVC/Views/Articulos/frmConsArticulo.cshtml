                                    <div class="col-md-3">
                                        <label>
                                            <input type="radio" class="ace" ng-model="rdbCodigo" name="PorArticulo" value="1" id="rbtArtAll"  />
                                            <span class="lbl">Todos los Artículos</span>
                                        </label>
                                    </div>
                                </div>*@
                            <div class="row">
                                <div class="col-md-2" style=" width:150px;">
                                    <label>
                                        <input type="radio" class="ace" ng-model="rdbCodigo" name="PorArticulo" value="1" id="rbtArtRef" checked="checked" />
                                        <span class="lbl">Cod. Referencia:</span>
                                    </label>
                                </div>
                                <div class="col-md-1">
                                    <input id="form-field-icon-2" ng-model="txtCodReferencia" name="anim" class="my-input" style="width: 100px; padding: 0 0 0 0; margin: 0 0 0 0;" />
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-2" style=" width:150px;">
                                    <label>
                                        <input type="radio" class="ace" ng-model="rdbCodigo" name="PorArticulo" value="3" id="rbtArtSap" />
                                        <span class="lbl">Cod. SAP:</span>
                                    </label>
                                </div>
                                <div class="col-md-1">
                                    <input id="form-field-icon-2" ng-model="txtCodSap" name="anim" style="width: 100px; padding: 0 0 0 0; margin: 0 0 0 0;" />
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-3">
                                    <label>
                                        <input type="radio" class="ace" ng-model="rdbCodigo" name="PorArticulo" value="4" id="rbtClasificacion" />
                                        <span class="lbl">Por Grupo Artículo:</span>
                                    </label>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-2">
                                    <div ng-dropdown-multiselect="" options="GrupoArticuloDS" checkboxes="true" selected-model="GrupoArticulo"
                                         extra-settings="SettingGrupoArt"></div>
                                </div>
                            </div>
                            <br />
                            <br />
                            <br />
                            <br />
                            <br />
                            <br />
                            <br />
                            <br />
                            <br />
                            <br />
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div>
            <div class="widget-box">
                <div class="widget-header">
                    <h4 class="smaller" style="text-align:right;">
                        <button type="button" class="btn btn-sm btn-round" ng-click="ModificarArt()" style="background-color:rgb(238,37,34)!important;border-color:rgb(238,37,34)!important" id="btnEditar">
                            <i class="fa fa-pencil" ></i>
                            Modificar Artículo(s)
                        </button>
                        <button type="button" ng-hide="true" class="btn btn-sm btn-round" ng-click="ModificarAden()" style="background-color:rgb(238,37,34)!important;border-color:rgb(238,37,34)!important" id="btnEditar">
                            <i class="glyphicon glyphicon-edit"></i>
                            Modificar Adendum
                        </button>
                       
                    </h4>
                   
                </div>
            </div>
        </div>
        <div cg-busy="{promise:myPromise,message:message,backdrop:true}">
            <div class="widget-box">
                <div class="widget-header" style="text-align:center;text-wrap:none;">
                    <h4 class="widget-title">CONSULTA DE ARTÍCULO</h4>
                    <div class="widget-toolbar">
                        <a href="#" data-action="collapse">
                            <i class="ace-icon fa fa-chevron-up"></i>
                        </a>

                    </div>
                    <font ng-hide="etiTotRegistros==''" class="widget-toolbar"> Total: {{etiTotRegistros}} registros </font>
                </div>

                <div class="widget-body">
                    <div class="widget-main">
                        <div ng-show="showPaginate">
                            <div class="span3 " ng-controller="PaginationController">
                                <div id="no-more-tables">
                                    <table class="table table-striped table-bordered table-condensed table-hover gridStyle">
                                        <thead>
                                            <tr>

                                                <th class="grid-header uppercase info" st-sort="codSap" style="font-family:Arial;text-align:center;font-size:11px;" >
                                                    <a href="#" ng-click="sortType = 'codSap'; sortReverse = !sortReverse">
                                                        Código Artículo
                                                        <span ng-show="sortType == 'codSap' && !sortReverse" class="fa fa-caret-down"></span>
                                                        <span ng-show="sortType == 'codSap' && sortReverse" class="fa fa-caret-up"></span>
                                                    </a>

                                                </th>
                                                <th class="grid-header uppercase info" st-sort="codReferencia" style="font-family:Arial;text-align:center;font-size:11px;">

                                                    <a href="#" ng-click="sortType = 'codReferencia'; sortReverse = !sortReverse">
                                                        Código Referencia
                                                        <span ng-show="sortType == 'codReferencia' && !sortReverse" class="fa fa-caret-down"></span>
                                                        <span ng-show="sortType == 'codReferencia' && sortReverse" class="fa fa-caret-up"></span>
                                                    </a>
                                                </th>
                                                <th class="grid-header uppercase info" st-sort="marca" style="font-family:Arial;text-align:center;font-size:11px;" width="20%">
                                                    <a href="#" ng-click="sortType = 'marca'; sortReverse = !sortReverse">
                                                        Marca
                                                        <span ng-show="sortType == 'marca' && !sortReverse" class="fa fa-caret-down"></span>
                                                        <span ng-show="sortType == 'marca' && sortReverse" class="fa fa-caret-up"></span>
                                                    </a>

                                                </th>
                                                <th class="grid-header uppercase info" st-sort="descripcion" style="font-family:Arial;text-align:center;font-size:11px;" width="40%">
                                                    <a href="#" ng-click="sortType = 'descripcion'; sortReverse = !sortReverse">
                                                        Descripción
                                                        <span ng-show="sortType == 'descripcion' && !sortReverse" class="fa fa-caret-down"></span>
                                                        <span ng-show="sortType == 'descripcion' && sortReverse" class="fa fa-caret-up"></span>
                                                    </a>

                                                </th>
                                                @*<th class="grid-header uppercase info" st-sort="Tipo de artículo">
                                                        <a href="#" ng-click="sortType = 'Tipo de artículo'; sortReverse = !sortReverse">
                                                            TIPO DE ARTÍCULO
                                                            <span ng-show="sortType == 'Tipo de artículo' && !sortReverse" class="fa fa-caret-down"></span>
                                                            <span ng-show="sortType == 'Tipo de artículo' && sortReverse" class="fa fa-caret-up"></span>
                                                        </a>

                                                    </th>*@
                                                @*<th class="grid-header uppercase info" st-sort="contacto">Persona Contacto</th>
                                                    <th class="grid-header uppercase info" st-sort="email">Email</th>
                                                    <th class="grid-header uppercase info" st-sort="paisOrigen">País Origen</th>*@
                                                
                                                <th class="grid-header uppercase info" style="font-family:Arial;text-align:center;font-size:11px;">
                                                    <a href="#">
                                                        Editar

                                                    </a>
                                                </th>
                                                <th class="grid-header uppercase info" style="font-family:Arial;text-align:center;font-size:11px;">
                                                    <a href="#">
                                                        Seleccionar

                                                    </a>
                                                </th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr ng-repeat="content in pageContentArt | orderBy:sortType:sortReverse" ng-hide="content.esGenerico">
                                                
                                                <td style="font-family:Arial;font-size:11px; text-align:center;" data-title="Cód. SAP">{{content.codSap}}</td>
                                                <td style="font-family:Arial;font-size:11px; text-align:left;" data-title="Cód. Prov. Refer.">{{content.codReferencia}}</td>
                                                <td style="font-family:Arial;font-size:11px; text-align:left;" data-title="Marca">{{content.marca}}</td>
                                                <td style="font-family:Arial;font-size:11px; text-align:left;" data-title="Descripción">{{content.descripcion}}</td>
                                                @*<td style="font-size:11px;" data-title="Tipo de artículo">{{content.tipoArticulo}}</td>*@
                                                @*<td style="font-size:11px;" data-title="Persona Contacto">{{content.contacto}}</td>
            <td style="font-size:11px;" data-title="Email">{{content.email}}</td>
            <td style="font-size:11px;" data-title="País Origen">{{content.paisOrigen}}</td>*@

                                                <td style="font-family:Arial;font-size:11px; text-align:center;" data-title=""><input type="checkbox" ng-model="content.chekeado" /></td>
                                                <td style="font-family:Arial;font-size:11px; text-align:center;" data-title="Seleccionar">
                                                    <a href="#" class="btn btn-danger btn-minier" ng-click="Seleccion(content.codSap);" style="border-width: 1px;padding: 0 5px;">
                                                        <i class=" glyphicon glyphicon-ok "></i>
                                                    </a>
                                                </td>

                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                            <ul style="position: relative;" class="pagination">
                                <li ng-class="{disabled: isFirstPage()}" pagination-left><a>&laquo;</a></li>
                                <li pagination ng-class="{active: page == getCurrentPage() }" page="{{page}}" ng-repeat="page in pagesArt">
                                    <a>{{page}}</a>
                                </li>
                                <li ng-class="{disabled: isLastPage()}" pagination-right><a>&raquo;</a></li>
                            </ul>
                        </div>

                    </div>
                </div>
            </div>
            @Html.Partial("_mensajeError")
            @Html.Partial("_mensajeConfirmacion")
            @Html.Partial("_mensajeInformativo")
            @Html.Partial("_mensajeConfirmacionEliminar")
            @Html.Partial("_mensajeConfirmado")
            @Html.Partial("_mensajeOK")
        </div>
    </div>
</body>

