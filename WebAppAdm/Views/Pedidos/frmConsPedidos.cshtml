    <!-- /section:basics/content.searchbox -->
</div>
<body class="page_container row ng-cloak" data-ng-controller="frmConsPedidosController" @Html.RequestVerificationToken() data-ng-app="ui.bootstrap.datetimepicker">

    @*<div style="height:100%;">*@
    <div style="height :100%; width:100%; font-size:12px;zoom:100%; ">
        <div style="height:100%;">
            <div class="ace-settings-container" id="ace-settings-container">
                <div class="btn btn-app btn-xs btn-warning ace-settings-btn" id="ace-settings-btn">
                    <i class="ace-icon glyphicon glyphicon-search bigger-130"></i>
                </div>
                <div class="ace-settings-box clearfix" id="ace-settings-box" onscroll="true">
                    <form name="usrAdicional" ng-submit="btnConsultaClick(); showPaginate=true;" >
                        <div class="container container-fluid" style="padding:0 0 0 0;" onscroll="true">
                            <div class="row">

                                <div class="col-md-3" style="text-align: right;">
                                    <button type="submit" id="btnConsulta1" class="btn btn-sm btn-round"
                                            style="background-color:rgb(238,37,34)!important;border-color:rgb(238,37,34)!important;font-size:12px;font-style:normal;" 
                                            create-pages results="resDgPedidos" number-per-page="{{cboPaginSelItem.codigo}}" pages="pagesPedidos"
                                            page-content="pgcDgPedidos;" page-limit="9000" binding="blur">
                                        @*ng-click="btnConsultaClick(); showPaginate=true;">*@
                                        <i class="glyphicon glyphicon-search"></i>
                                        Consultar
                                    </button>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-4 titulos" >
                                    <span class="lbl" style="font-family:Arial;font-size:12px">Código Proveedor</span>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-1 ">
                                    <label >
                                        <span class="lbl" style="font-family:Arial;font-size:12px">Código de Proveedor:</span>
                                    </label>
                                </div>
                                <div class="col-md-2 ">
                                    <input type="text" id="txtcodsap" ng-model="pCodSAP" maxlength="6" placeholder="Código de Proveedor" class="form-control" style="font-family:Arial;font-size:12px;width:90%"  ng-required="true" oninvalid="setCustomValidity('Código de Proveedor requerido')" oninput="    setCustomValidity('')" />
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-4 titulos" >
                                    <span class="lbl" style="font-family:Arial;font-size:12px">Consulta por Fecha y Ciudad</span>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-1 ">
                                    <label >
                                        <input type="radio" name="FiltrosGrupo1" class="ace form-control" id="rbtPorFecha" ng-model="pOpcGrp1" value="F" />
                                        <span class="lbl" style="font-family:Arial;font-size:12px">Fecha</span>
                                    </label>
                                </div>
                                <div class="col-md-2 ">
                                    <div class="input-group">

                                        @*<input type="date" id="txtFechaIni" ng-model="pFechaIni" maxlength="10" placeholder="Fecha Inicial" class="form-control" style="width:90%" />*@
                                        <input class="form-control date-picker input-mask-date" id="txtFecha" type="text" ng-model="pFecha" maxlength="10" placeholder="Fecha" data-date-format="dd/mm/yyyy" />
                                        <span class=" input-group-addon">
                                            <i class="fa fa-calendar small-1"></i>
                                        </span>
                                    </div>
                                    @*<input type="date" id="txtFecha" ng-model="pFecha" maxlength="10" placeholder="Fecha" class="form-control" style="width:90%" />*@
                                </div>
                            </div>
                            <div class="row">

                                <div class="col-md-3 ">
                                    <select class="chosen-select form-control " id="cboCiudadL1" data-placeholder="Seleccione la ciudad.."
                                            ng-model="cboCiudadSelItem1" ng-options="item as item.pNomCiudad for item in cboCiudadList1"></select>
                                </div>
                            </div>
                            <div class="row">

                                <div class="col-md-3 ">
                                    <select class="chosen-select form-control " id="cboAlamcenL1" data-placeholder="Seleccione el almacén.."
                                            ng-model="cboAlmacenSelItem1" ng-options="item as item.pNomAlmacen for item in cboAlmacenList1"></select>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-4 titulos" >
                                    <span class="lbl" style="font-family:Arial;font-size:12px">Consulta por Rango Fecha y ciudad</span>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-2 ">
                                    <label>
                                        <input type="radio" name="FiltrosGrupo1" class="ace form-control" id="rbtPorRango" ng-model="pOpcGrp1" value="R" />
                                        <span class="lbl" style="font-family:Arial;font-size:12px">Rango de Fecha</span>
                                    </label>
                                </div>

                            </div>
                            <div class="row">
                                <div class="col-md-1 ">
                                    <label>
                                        <span class="lbl" style="font-family:Arial;font-size:12px">Desde:</span>
                                    </label>
                                </div>
                                <div class="col-md-2 ">
                                    <div class="input-group">

                                        @*<input type="date" id="txtFechaIni" ng-model="pFechaIni" maxlength="10" placeholder="Fecha Inicial" class="form-control" style="width:90%" />*@
                                        <input class="form-control date-picker input-mask-date" id="txtFechaIni" type="text" ng-model="pFechaIni" maxlength="10" placeholder="Fecha Inicial" data-date-format="dd/mm/yyyy" />
                                        <span class=" input-group-addon">
                                            <i class="fa fa-calendar small-1"></i>
                                        </span>
                                    </div>

                                </div>

                            </div>

                            <div class="row">
                                <div class="col-md-1 ">
                                    <label>
                                        <span class="lbl" style="font-family:Arial;font-size:12px">Hasta:</span>
                                    </label>
                                </div>
                                <div class="col-md-2 ">
                                    <div class="input-group">

                                        @*<input type="date" id="txtFechaIni" ng-model="pFechaIni" maxlength="10" placeholder="Fecha Inicial" class="form-control" style="width:90%" />*@
                                        <input class="form-control date-picker input-mask-date" id="txtFechaFin" type="text" ng-model="pFechaFin" maxlength="10" placeholder="Fecha Final" data-date-format="dd/mm/yyyy" />
                                        <span class=" input-group-addon">
                                            <i class="fa fa-calendar small-1"></i>
                                        </span>
                                    </div>
                                    @*<input type="date" id="txtFechaFin" ng-model="pFechaFin" maxlength="10" placeholder="Fecha Final" class="form-control" style="width:90%" />*@
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-3 ">
                                    <select class="chosen-select  form-control" id="cboCiudadL2" data-placeholder="Seleccione la ciudad.."
                                            ng-model="cboCiudadSelItem2" ng-options="item as item.pNomCiudad for item in cboCiudadList2"></select>
                                </div>
                            </div>
                            <div class="row">

                                <div class="col-md-3 ">
                                    <select class="chosen-select form-control " id="cboAlamcenL2" data-placeholder="Seleccione el almacén.."
                                            ng-model="cboAlmacenSelItem2" ng-options="item as item.pNomAlmacen for item in cboAlmacenList2"></select>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-4 titulos" >
                                    <span class="lbl" style="font-family:Arial;font-size:12px">No. Orden</span>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-1 ">
                                    <label>
                                        <input type="radio" name="FiltrosGrupo1" class="ace form-control" id="rbtPorOrden" ng-model="pOpcGrp1" value="O" />
                                        <span class="lbl" style="font-family:Arial;font-size:12px">No. Orden</span>
                                    </label>
                                </div>
                                <div class="col-md-2 ">
                                    <input type="text" id="txtNumOrden" ng-model="pNumOrden" maxlength="10" placeholder="Número de Orden" class="form-control" style="font-family:Arial;font-size:12px;width:90%" />
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-4 titulos">
                                    <span class="lbl" style="font-family:Arial;font-size:12px">Estado de la Orden</span>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-3 ">
                                    <label>
                                        <input type="radio" name="FiltrosGrupo2" class="ace form-control" id="rbtTodos" ng-model="pOpcGrp2" value="T" />
                                        <span class="lbl">&nbsp;Todos</span>
                                    </label>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-3 ">
                                    <label>
                                        <input type="radio" name="FiltrosGrupo2" class="ace form-control" id="rbtNuevos" ng-model="pOpcGrp2" value="N1" />
                                        <span class="lbl" style="font-family:Arial;font-size:12px">&nbsp;Nuevos</span>
                                    </label>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-3 ">
                                    <label>
                                        <input type="radio" name="FiltrosGrupo2" class="ace form-control" id="rbtDescarga" ng-model="pOpcGrp2" value="D" />
                                        <span class="lbl" style="font-family:Arial;font-size:12px">&nbsp;Descargados</span>
                                    </label>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-4 titulos">
                                    <span class="lbl" style="font-family:Arial;font-size:12px">Formato de Descarga</span>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-3" style="font-family:Arial;font-size:12px">
                                    <label>
                                        <input type="checkbox" class="ace form-control" id="chkVerRes" ng-model="bandVerRes" />
                                        <span class="lbl" style="font-family:Arial;font-size:12px">Ver Resumen en pantalla HTML</span>
                                    </label>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-3">
                                    <label>
                                        <input type="checkbox" class="ace form-control" id="chkVerPdf" ng-model="bandVerPdf" />
                                        <span class="lbl" style="font-family:Arial;font-size:12px">Ver Resumen en pantalla PDF</span>
                                    </label>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-3 ">
                                    <label>
                                        <input type="checkbox" class="ace form-control" id="chkGenTxt" ng-model="bandGenTxt" />
                                        <span class="lbl" style="font-family:Arial;font-size:12px">Generar archivo texto (.txt)</span>
                                    </label>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-3 ">
                                    <label>
                                        <input type="checkbox" class="ace form-control" id="chkGenXml" ng-model="bandGenXml" />
                                        <span class="lbl" style="font-family:Arial;font-size:12px">Generar archivo XML (.xml)</span>
                                    </label>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-4 titulos">
                                    <span class="lbl" style="font-family:Arial;font-size:12px">Cantidad Registro por Página</span>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-1">
                                    <label>
                                        <span class="lbl" style="font-family:Arial;font-size:12px">Mostrar</span>
                                    </label>
                                </div>
                                <div class="col-md-2">
                                    <label>
                                        <select class="chosen-select form-control" id="cboPagineo" ng-model="cboPaginSelItem"
                                                ng-options="item as item.descripcion for item in cboPaginList" style="width:70px;"></select>
                                    </label>

                                </div>

                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <div cg-busy="{promise:myPromise,message:message,backdrop:true}">
        <div class="tabbable">
            <ul class="nav nav-tabs" id="myTab">
                <li class="active">
                    <a data-toggle="tab" href="#ListadoPedidos">
                        Consulta de Órdenes
                    </a>
                </li>
            </ul>


            <div class="tab-content">
                <div id="ListadoPedidos" class="tab-pane fade in active">
                    @*Session Grid de Choferes Ingresados*@
                    <div class="widget-box">
                        <div class="widget-header" style="text-align:center;text-wrap:none;">
                            <h4 class="widget-title">BANDEJA DE CONSULTA DE ÓRDENES DE COMPRA</h4>
                            <div class="widget-toolbar">
                                <a href="#" data-action="collapse">
                                    <i class="ace-icon fa fa-chevron-up"></i>
                                </a>
                            </div>
                            <font ng-hide="etiTotRegistros==''" class="widget-toolbar"> Total: {{etiTotRegistros}} Registros </font>
                        </div>

                        <div class="widget-body">
                            <div class="widget-main">
                                @*Session Botones*@
                                <div class="widget-box">
                                    <div class="widget-header">
                                        <div class="row">
                                            <div class=" col-md-12 ">

                                                <h4 class="smaller" style="text-align:right;">
                                                    <a ng-click="exportar(1)" class="btn btn-sm btn-round" ng-hide="hideBtnT" style="font-size:10pt;background-color:rgb(238,37,34)!important;border-color:rgb(238,37,34)!important;">
                                                        <i class="ace-icon fa fa-download"></i>
                                                        Descargar Órdenes TXT
                                                    </a>
                                                    &nbsp;&nbsp;
                                                    <a ng-click="exportar(2)" class="btn btn-sm btn-round" ng-hide="hideBtnX" style="font-size:10pt;background-color:rgb(238,37,34)!important;border-color:rgb(238,37,34)!important;">
                                                        <i class="ace-icon fa fa-download"></i>
                                                        Descargar Órdenes XML
                                                    </a>
                                                    &nbsp;&nbsp;
                                                    <a ng-click="exportar(4)" ng-hide="hideBtnPdf" class="btn btn-sm btn-round" style="font-size:10pt;background-color:rgb(238,37,34)!important;border-color:rgb(238,37,34)!important;">
                                                        <i class="ace-icon fa fa-file-pdf-o"></i>
                                                        Imprimir Órdenes PDF
                                                    </a>
                                                    &nbsp;&nbsp;
                                                    <a ng-click="exportar(3)" ng-hide="hideGrid" class="btn btn-sm btn-round" style="font-size:10pt;background-color:rgb(238,37,34)!important;border-color:rgb(238,37,34)!important;">
                                                        <i class="ace-icon fa fa-print"></i>
                                                        Imprimir Órdenes HTML
                                                    </a>
                                                    &nbsp;&nbsp;
                                                </h4>

                                            </div>
                                        </div>
                                    </div>
                                    <div class="widget-body">
                                        <div class="widget-main">
                                            <div ng-controller="PaginationController" >
                                                <div ng-show="showPaginate">
                                                    <div id="no-more-tables">
                                                        <table id="example" class="table table-striped table-bordered table-condensed table-hover gridStyle">
                                                            <thead>
                                                                <tr>
                                                                    <th class="grid-header uppercase info" style="text-align:center;font-size:11px;font:bold">
                                                                        <a href="#" ng-click="sortType = 'numPedido'; sortReverse = !sortReverse">
                                                                            Número Pedido
                                                                            <span ng-show="sortType == 'numPedido' && !sortReverse" class="fa fa-caret-down"></span>
                                                                            <span ng-show="sortType == 'numPedido' && sortReverse" class="fa fa-caret-up"></span>
                                                                        </a>
                                                                    </th>
                                                                    <th class="grid-header uppercase info" style="text-align:center;font-size:11px;font:bold">
                                                                        <a href="#" ng-click="sortType = 'fechaPedido'; sortReverse = !sortReverse">
                                                                            Fecha Emisión
                                                                            <span ng-show="sortType == 'fechaPedido' && !sortReverse" class="fa fa-caret-down"></span>
                                                                            <span ng-show="sortType == 'fechaPedido' && sortReverse" class="fa fa-caret-up"></span>
                                                                        </a>
                                                                    </th>
                                                                    <th class="grid-header uppercase info" style="text-align:center;font-size:11px;font:bold">
                                                                        <a href="#" ng-click="sortType = 'fecEntregaActual'; sortReverse = !sortReverse">
                                                                            Fecha de Entrega
                                                                            <span ng-show="sortType == 'fecEntregaActual' && !sortReverse" class="fa fa-caret-down"></span>
                                                                            <span ng-show="sortType == 'fecEntregaActual' && sortReverse" class="fa fa-caret-up"></span>
                                                                        </a>
                                                                    </th>
                                                                    <th class="grid-header uppercase info" style="text-align:center;font-size:11px;font:bold">
                                                                        <a href="#" ng-click="sortType = 'codAlmacen'; sortReverse = !sortReverse">
                                                                            Código Almacén
                                                                            <span ng-show="sortType == 'codAlmacen' && !sortReverse" class="fa fa-caret-down"></span>
                                                                            <span ng-show="sortType == 'codAlmacen' && sortReverse" class="fa fa-caret-up"></span>
                                                                        </a>
                                                                    </th>
                                                                    <th class="grid-header uppercase info" style="text-align:center;font-size:11px;font:bold">
                                                                        <a href="#" ng-click="sortType = 'nomAlmacen'; sortReverse = !sortReverse">
                                                                            Nombre Almacén
                                                                            <span ng-show="sortType == 'nomAlmacen' && !sortReverse" class="fa fa-caret-down"></span>
                                                                            <span ng-show="sortType == 'nomAlmacen' && sortReverse" class="fa fa-caret-up"></span>
                                                                        </a>
                                                                    </th>
                                                                    <th class="grid-header uppercase info" style="text-align:center;font-size:11px;font:bold">
                                                                        <a href="#" ng-click="sortType = 'codAlmDestino'; sortReverse = !sortReverse">
                                                                            Código Almacén Destino
                                                                            <span ng-show="sortType == 'codAlmDestino' && !sortReverse" class="fa fa-caret-down"></span>
                                                                            <span ng-show="sortType == 'codAlmDestino' && sortReverse" class="fa fa-caret-up"></span>
                                                                        </a>
                                                                    </th>
                                                                    <th class="grid-header uppercase info" style="text-align:center;font-size:11px;font:bold">
                                                                        <a href="#" ng-click="sortType = 'zonaOrigen'; sortReverse = !sortReverse">
                                                                            Zona Origen
                                                                            <span ng-show="sortType == 'zonaOrigen' && !sortReverse" class="fa fa-caret-down"></span>
                                                                            <span ng-show="sortType == 'zonaOrigen' && sortReverse" class="fa fa-caret-up"></span>
                                                                        </a>
                                                                    </th>
                                                                    <th class="grid-header uppercase info" style="text-align:center;font-size:11px;font:bold">
                                                                        <a href="#" ng-click="sortType = 'valorTotalPedido'; sortReverse = !sortReverse">
                                                                            Total Pedido
                                                                            <span ng-show="sortType == 'valorTotalPedido' && !sortReverse" class="fa fa-caret-down"></span>
                                                                            <span ng-show="sortType == 'valorTotalPedido' && sortReverse" class="fa fa-caret-up"></span>
                                                                        </a>
                                                                    </th>
                                                                    <th class="grid-header uppercase info" style="text-align:center;font-size:11px;font:bold">
                                                                        <a href="#" ng-click="sortType = 'totalSumaFacturas'; sortReverse = !sortReverse">
                                                                            Total Facturas
                                                                            <span ng-show="sortType == 'totalSumaFacturas' && !sortReverse" class="fa fa-caret-down"></span>
                                                                            <span ng-show="sortType == 'totalSumaFacturas' && sortReverse" class="fa fa-caret-up"></span>
                                                                        </a>
                                                                    </th>
                                                                    <th class="grid-header uppercase info" style="text-align:center;font-size:11px;font:bold">
                                                                        <a href="#" ng-click="sortType = 'valorPendPedido'; sortReverse = !sortReverse">
                                                                            Pendiente Pedido
                                                                            <span ng-show="sortType == 'valorPendPedido' && !sortReverse" class="fa fa-caret-down"></span>
                                                                            <span ng-show="sortType == 'valorPendPedido' && sortReverse" class="fa fa-caret-up"></span>
                                                                        </a>
                                                                    </th>
                                                                    <th class="grid-header uppercase info" style="text-align:center;font-size:11px;font:bold">
                                                                        <a href="#" ng-click="sortType = 'estadoDes'; sortReverse = !sortReverse">
                                                                            Estado
                                                                            <span ng-show="sortType == 'estadoDes' && !sortReverse" class="fa fa-caret-down"></span>
                                                                            <span ng-show="sortType == 'estadoDes' && sortReverse" class="fa fa-caret-up"></span>
                                                                        </a>
                                                                    </th>
                                                                    <th class="grid-header uppercase info" style="text-align:center;font-size:11px;color:#23527c;font:bold">
                                                                        <a href="#" ng-click="sortType = 'estadoDes'; sortReverse = !sortReverse">
                                                                            Desc.
                                                                        </a>
                                                                    </th>
                                                                    <th class="grid-header uppercase info" style="text-align:center;font-size:11px;color:#23527c;font:bold">
                                                                        <a href="#" ng-click="sortType = 'estadoDes'; sortReverse = !sortReverse">
                                                                            Imp.
                                                                        </a>
                                                                    </th>
                                                                    <th class="grid-header uppercase info" style="text-align:center;font-size:11px;color:#23527c;font:bold">
                                                                        <a href="#" ng-click="sortType = 'estadoDes'; sortReverse = !sortReverse">
                                                                            Seleccionar
                                                                        </a>
                                                                    </th>
                                                                </tr>
                                                            </thead>
                                                            <tbody>
                                                                <tr ng-repeat="row in pgcDgPedidos | orderBy:sortType:sortReverse">
                                                                    <td style="font-size:11px;text-align:center;" data-title="NO.PEDIDO">{{row.numPedido}}</td>
