                                            <select ng-disabled="inactivaTab" id="selectsabor" class="form-control" name="retencion" ng-model="ddlRetencion" ng-options="item as item.detalle for item in sn_ret"
                                                    style=" width: 100%; ">
                                                <option value="">Seleccione SI/NO</option>
                                            </select>
                                        </div>
                                    </div>
                                    <br />
                                    <div class="row">
