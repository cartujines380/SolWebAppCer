                                                                <input type="email" class="form-control" name="Nombres" id="txtNombresSegundo" ng-model="traCo.correoComprador" maxlength="70" placeholder="Correo del Comprador" style=" width: 100%" ng-disabled="habilitar" ng-required="true"
                                                                       oninvalid="setCustomValidity('Correo Comprador es requerido.')" oninput="    setCustomValidity('')" />
                                                            </div>
                                                        </div>
                                                        <div class="row">
                                                            <div class=" col-md-2">
                                                                <label>
                                                                    <span class="lbl">Correo del Asistente del Gerencia:</span>
                                                                </label>
                                                            </div>
                                                            <div class=" col-md-4">
                                                                <input type="email" name="apellidoprimero" class="form-control" ng-model="traCo.correoAsistenteComprador" maxlength="70" placeholder="Correo del Asistente del Gerencia" style=" width: 100%" ng-disabled="habilitar"
                                                                       ng-required="true" oninvalid="setCustomValidity('Correo Asistente Gerencia es requerido.')" oninput="    setCustomValidity('')" />
                                                            </div>
                                                        </div>
